<div class="h-screen
        md:h-full
        flex
        flex-col
        justify-start
        gap-6
        md:gap-8
        px-4
        py-8
        md:p-8
        w-full
        md:w-3/5"
>
  <h1 class="text-4xl font-bold text-gray-800 border-b-2">
    Message says:
  </h1>

  <div class="w-full flex flex-col gap-4 md:gap-6">
    <p class="text-gray-800 text-lg">
      <%= @message.content %>
    </p>

    <%= link_to(
      "Create a new message",
      root_url,
      class: "inline-flex
              items-center
              justify-center
              h-10
              py-2
              px-5
              border
              border-transparent
              shadow-sm
              text-sm
              font-medium
              rounded-full
              text-white
              bg-indigo-600
              hover:bg-indigo-700
              hover:scale-105
              transition-transform
              focus:outline-none
              focus:ring-2
              focus:ring-offset-2
              focus:ring-indigo-500"
    ) %>
  </div>
</div>
