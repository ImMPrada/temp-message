<div
  data-controller="clipboard"
  class="h-screen
      md:h-full
      flex
      flex-col
      justify-start
      gap-6
      md:gap-8
      px-4
      py-8
      md:p-8
      w-full
      md:w-3/5"
>
  <h1 class="text-3xl font-bold text-gray-800 border-b-2 border-gray-700">
    Message says:
  </h1>


  <div data-action="click->clipboard#selectContent"
    class="w-full flex flex-col gap-4 md:gap-6"
  >
    <div class="prose max-w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4">
      <%= markdown_to_html(@content.to_plain_text) %>
    </div>

    <%= link_to(
      "Create a new message",
      root_url,
      turbo: true,
      class: "self-start
              inline-flex
              items-center
              justify-center
              h-10
              py-2
              px-5
              border
              border-transparent
              shadow-sm
              text-sm
              font-medium
              rounded-full
              text-white
              bg-indigo-600
              hover:bg-indigo-700
              hover:scale-105
              transition-transform
              focus:outline-none
              focus:ring-2
              focus:ring-offset-2
              focus:ring-indigo-500"
    ) %>
  </div>
</div>


<script type="text/javascript">
  document.addEventListener("DOMContentLoaded", () => {
    const editorElement = document.getElementById("markdown-editor");

    if (editorElement) {
      new SimpleMDE({
        element: editorElement,
        readOnly: true, // Make the editor read-only
        spellChecker: false,
        status: false,
        toolbar: false
      });
    }
  });
</script>
