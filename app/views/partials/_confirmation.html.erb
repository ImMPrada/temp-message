<div
  id="new_message_form"
  data-controller="hello"
  class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md transform transition-all hover:shadow-2xl"
>
  <h1 class="text-3xl font-bold text-gray-800 mb-6 border-b-2">
    Message Created!
  </h1>

  <p class="text-xl text-gray-800 border-b-2">
    El enlace del mensaje es: <a href="<%= message_url(@message) %>"><%= message_url(@message) %></a>
  </p>
  <div class="min-w-full flex flex-col md:flex-row justify-between">
    <button
      id="copy-link-button"
      type="button"
      data-action="click->hello#greet"
      class="block items-center justify-center py-2 px-5 border border-transparent shadow-sm text-sm font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 transition-transform focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
    >
      Copy link
    </button>
    <%= link_to "New message", root_path, class: "inline-flex items-center justify-center py-2 px-5 border border-transparent shadow-sm text-sm font-medium rounded-full text-white bg-indigo-600 hover:bg-indigo-700 hover:scale-105 transition-transform focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>
